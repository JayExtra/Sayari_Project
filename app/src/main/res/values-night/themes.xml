<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SayariProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColor</item>
        <item name="colorOnSecondary">@color/primaryTextColor</item>
        <!-- com.dev.james.sayariproject.models.iss.Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SayariProject.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/primaryTextColor</item>
        <item name="tabSelectedTextColor">@color/primaryTextColor</item>
        <item name="tabTextColor">@color/primaryTextColor</item>
        <item name="backgroundTint">@color/primaryLightColor</item>
    </style>
    <style name="Theme.SayariProject.MaterialToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/primaryColor</item>
        <item name="navigationIconTint">@color/white</item>

    </style>

    <style name="Theme.SayariProject.TextAppearanceHeadings" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.SayariProject.SettingsCards" parent="Widget.MaterialComponents.CardView">
        <item name="backgroundTint">@color/primaryColor</item>
    </style>

    <style name="Theme.SayariProject.TextAppearanceSubHeading" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/ubuntu_light</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primaryLightColor</item>
    </style>
    <style name="Theme.SayariProject.TextAppearanceSubTitles" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primaryLightColor</item>
    </style>
    <style name="Theme.SayariProject.NestedScrollView">
        <item name="android:background">@color/primaryColor</item>
    </style>



    <style name="collapsingToolbarLayoutTitleColorOpen" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="collapsingToolbarLayoutTitleCollapsed" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.SayariProject.CollapsingToolbar" parent="Widget.Design.CollapsingToolbar">
        <item name="contentScrim">@color/primaryColor</item>
        <item name="statusBarScrim">@color/primaryColor</item>

    </style>
    <style name="Theme.SayariProject.EventsCount">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.SayariProject.EventsCountLabelA">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.SayariProject.EventsCountLabelB">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.SayariProject.DiscoverSubHeadings" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primaryLightColor</item>
        <item name="fontFamily">@font/ubuntu</item>
    </style>

    <style name="Theme.SayariProject.IssImageStyle">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="Theme.SayariProject.StatisticsDigits" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
    </style>

    <style name="Theme.SayariProject.TextAppearanceSpacecraftSubTitles" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="android:textColor">@color/secondaryColor</item>
    </style>

    <style name="Theme.SayariProject.TextAppearanceSpacecraftSmallTitles" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="android:textColor">@color/sub_grey</item>
    </style>




</resources>