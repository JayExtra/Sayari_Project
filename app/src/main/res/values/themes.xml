<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SayariProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColor</item>
        <item name="colorOnSecondary">@color/secondaryDarkColor</item>
        <!-- com.dev.james.sayariproject.models.iss.Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--Splash screen theme-->
    <style name="SplashScreenStyle" parent="Theme.MaterialComponents.Light.NoActionBar">
       <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <!--material text button common theme-->
    <style name="Theme.SayariProject.CustomTextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/secondaryColor</item>
        <item name ="android:fontFamily">@font/ubuntu_light</item>
    </style>

    <style name="Theme.SayariProject.CustomTextButtonStyleRounded" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/secondaryColor</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name ="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="Theme.SayariProject.TextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:textColor">@color/primaryLightColor</item>
    </style>
    <style name="Theme.SayariProject.TextAppearancePara" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/ubuntu_light</item>
        <item name="android:textColor">@color/primaryLightColor</item>
    </style>
    <style name="Theme.SayariProject.TextAppearanceDimCards" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.SayariProject.TextAppearanceHeadings" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>
    <style name="Theme.SayariProject.TextAppearanceTopNewsCard" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.SayariProject.TextAppearanceSubTitles" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="Theme.SayariProject.TextAppearanceDaysIndicators" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/primaryLightColor</item>
    </style>

    <style name="Theme.SayariProject.TextAppearanceBottomAppBar" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/ubuntu</item>
    </style>

    <style name="Theme.SayariProject.Widget.App.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemIconTint">@color/navigation_item_color</item>
        <item name="itemTextColor">@color/navigation_item_color</item>
        <item name="itemShapeFillColor">@color/navigation_item_background_color</item>
    </style>

    <style name="CustomChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/background_color_chip_state</item>
        <item name="android:textColor">@color/text_color_chip_state</item>
    </style>

    <style name="Theme.SayariProject.TextAppearanceSubHeading" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/ubuntu_light</item>
        <item name="android:textSize">24sp</item>
    </style>


    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circular_progress</item>
    </style>

    <style name="Theme.SayariProject.TextAppearanceSubCards" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primaryLightColor</item>
    </style>

    <style name="Theme.SayariProject.StatisticsDigits" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
    </style>

    <style name="Theme.SayariProject.RatingBar" parent="Widget.AppCompat.RatingBar">
        <!--non-selected star-->
        <item name="colorControlNormal">#4D000000</item>
        <!--selected star-->
        <item name="colorControlActivated">@color/secondaryColor</item>


    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
    <item name="android:windowEnterAnimation">@anim/slide_up</item>
    <item name="android:windowExitAnimation">@anim/slide_down</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">false</item>
    <item name="android:windowIsFloating">false</item>
    </style>



    <!---email section-->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
    <item name="colorPrimary">@color/secondaryLightColor</item>
   <!-- <item name="colorOnSurface">@color/secondaryColor</item>-->
    <item name="colorError">@color/error_red</item>
    <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>
    <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>
       <item name="editTextStyle">@style/Widget.AppCompat.EditText</item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>




</resources>